
## targets

default: Thy ../Makefile.in
images: 
test: Thy

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -v true -i false -d false -C false -D document


## Thy

THY = $(LOG)/HOL-Thy.gz

Thy: $(THY)

$(THY): Thy/ROOT.ML Thy/Setup.thy Thy/Haskabelle.thy
	@$(USEDIR) HOL Thy


## mimic isabelle document sources

../Makefile.in:
	( cd .. && for NAME in $(ISABELLE_HOME)/*; do ln -s $$NAME $$(basename $$NAME); done )



## clean

clean:
	@rm -f $(THY)
