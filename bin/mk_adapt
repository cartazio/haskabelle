#!/bin/bash
#
# $Id: isatool,v 1.22 2005/05/17 07:58:47 wenzelm Exp $
# Author: Florian Haftmann, TU Muenchen
#
# Call to adaption table builder from the shell.

function fail()
{
  echo "$1" >&2
  exit 2
}

EXECPATH="$(dirname "$0")/.."

[ -z "$EXECPATH" ] && fail "$0 must be called with absolute path"

cd "$EXECPATH"

[ -z "$ISABELLE" ] && ISABELLE="$(isatool getenv -b ISABELLE)"

