#!/bin/bash

function fail()
{
  echo "$1" >&2
  exit 2
}

EXECPATH="$(dirname "$0")/.."
SRC="$1"
DST="$2"

[ -z "$EXECPATH" ] && fail "$0 must be called with absolute path"
[ -z "$SRC" ] && fail "no source file given"
[ -z "$DST" ] && fail "no target file given"

cd "$EXECPATH"
ghc -fglasgow-exts --make --make -o import_file_bin Hsimp.hs || exit $?

echo "Importing $SRC to $DST..."
./import_file_bin "$SRC" "$DST"
